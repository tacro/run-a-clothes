<div class="main users-edit">
  <div class="container">
    <div class="form-heading">
      <%= label :user, :edit %>
    </div>
    <div class="form users-form">
      <div class="form-body">

        <% @user.errors.full_messages.each do |message| %>
                 <div class="form-error">
                   <%= message %>
                 </div>
        <% end %>
        <div class="field" >
          <%= form_for @user, :url => { :controller => :users, :action => :update }, html: { class: "directUpload", data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } } do |f|%>
          <%= f.label :username %>
          <%= f.text_field :username %>

          <%= f.label :avatar %>
          <%= f.file_field :avatar ,accept: 'image/jpg,image/jpeg,image/png,image/gif' %>


          <%= f.label :profile %>
          <%= f.text_area :profile %>

          <%= f.submit :label => :update %>

        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'post_avatar.js' %>
